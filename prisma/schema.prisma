generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ==================================
//  ユーザーテーブル
// ==================================
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String
  role       Role     @default(MEMBER)
  status     Status   @default(PENDING_VERIFICATION)
  is_deleted Boolean  @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // --- 他のテーブルとの関連付け ---
  reviews   Review[]
}

// ==================================
//  映画テーブル
// ==================================
model Movie {
  id           String   @id // 外部API(TMDbなど)のIDを主キーとして使うことを想定
  title        String
  release_date DateTime?
  poster_path  String?
  overview     String?
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt

  // --- 他のテーブルとの関連付け ---
  reviews Review[]
}

// ==================================
//  レビューテーブル
// ==================================
model Review {
  id        Int      @id @default(autoincrement())
  rating    Int // 評価（☆1〜5）
  comment_general String? // ネタバレなしコメント (任意)
  comment_spoiler String? // ネタバレありコメント (任意)
  is_deleted Boolean  @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // --- 他のテーブルとの関連付け ---
  author    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  movie     Movie    @relation(fields: [movieId], references: [id])
  movieId   String
}


// ==================================
//  Enum定義 (選択肢の定義)
// ==================================
enum Role {
  ADMIN   // 管理者
  MEMBER  // 一般会員
}

enum Status {
  ACTIVE                // 有効
  PENDING_VERIFICATION  // メールアドレス確認待ち
  SUSPENDED             // 利用停止中
}